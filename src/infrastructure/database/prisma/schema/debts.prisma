model CompanyDebt {
    id            Int         @id @default(autoincrement())
    companyId     Int
    company       CompanyInfo @relation(fields: [companyId], references: [id])
    product       String
    invoiceNumber String?
    quantity      Int
    price         Int
    totalAmount   Int?

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@index([id, invoiceNumber])
}
