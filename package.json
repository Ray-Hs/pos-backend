{
  "name": "restaurant-pos",
  "version": "1.0.0",
  "main": "index.js",
  "prisma": {
    "schema": "./src/infrastructure/database/prisma/schema/schema.prisma",
    "migrations": {
      "path": "./src/infrastructure/database/prisma/schema/migrations"
    }
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "dotenv -- nodemon --exec ts-node ./src/server.ts",
    "preinstall": "npm install canvas --build-from-source=false",
    "postinstall": "npm run migrate-dev && npm run migrate-deploy && npm run generate",
    "build:server": "npx prisma migrate dev --name init && npx prisma generate && tsc && node ./public/dist/src/script.js",
    "build:conditional": "sh -c 'if [ \"$FIRST_BUILD_COMPLETE\" = \"true\" ]; then npm run build; else npm run build:server && echo \"Set FIRST_BUILD_COMPLETE=true in Railway dashboard after this build\"; fi'",
    "build": "tsc",
    "build:production": "npm run build:bundle && npm run build:prisma",
    "build:bundle": "npx prisma generate && node build-bundle.js",
    "build:prisma": "npx prisma generate",
    "vercel-build": "prisma generate && prisma migrate deploy && tsc",
    "start:dev": "node public/dist/src/server.js",
    "start": "node public/dist/src/server.js",
    "migrate-dev": "npx prisma migrate dev",
    "migrate-deploy": "npx prisma migrate deploy",
    "generate": "npx prisma generate",
    "studio": "npx prisma studio",
    "clean:migrations": "del /S /Q .\\src\\infrastructure\\database\\prisma\\migrations\\*",
    "db:reset": "npx prisma migrate reset --force",
    "db:clean": "npm run clean:migrations && npm run db:reset"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "@aws-sdk/client-s3": "3.32.0",
    "@borderliner/canvas-table": "^0.1.25",
    "@point-of-sale/network-receipt-printer": "^2.0.1",
    "@prisma/client": "^6.9.0",
    "@tillpos/xml-escpos-helper": "^0.3.1",
    "arabic-persian-reshaper": "^1.0.1",
    "aws-sdk": "^2.1692.0",
    "bidi-js": "^1.0.3",
    "canvas": "^3.1.2",
    "cheerio": "^1.1.0",
    "compression": "^1.8.0",
    "convert-html-to-pdf": "^1.0.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "express-rate-limit": "^7.5.0",
    "fuse": "^0.12.1",
    "fuse.js": "^7.1.0",
    "html-template-string": "^1.2.6",
    "html-to-image": "^1.11.13",
    "iconv-lite": "^0.6.3",
    "jsonwebtoken": "^9.0.2",
    "ms": "^2.1.3",
    "multer": "^2.0.1",
    "node-html-to-image": "^5.0.0",
    "node-thermal-printer": "^4.5.0",
    "pdf-parse": "^1.1.1",
    "pdf-to-printer": "^5.6.0",
    "pdfkit": "^0.17.1",
    "pdfkit-table": "^0.1.99",
    "puppeteer": "^24.12.0",
    "receiptline": "^1.16.2",
    "serverless-http": "^3.2.0",
    "winston": "^3.17.0",
    "zod": "^3.24.2"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.9.0",
    "@types/compression": "^1.8.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.1",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.12",
    "@types/pdf-parse": "^1.1.5",
    "@types/pdfkit": "^0.14.0",
    "@types/printer": "^0.4.5",
    "@types/winston": "^2.4.4",
    "dotenv-cli": "^8.0.0",
    "esbuild": "^0.20.2",
    "nodemon": "^3.1.9",
    "prisma": "^6.9.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.2"
  }
}
